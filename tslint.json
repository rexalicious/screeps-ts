{
  "extends" : [
    "tslint:recommended"
  ],
  "rules": {
    "forin": false,
    "interface-name": [false],
    "no-console": [false],
    "no-namespace": [true, "allow-declarations"],
    "curly": [true, "ignore-same-line"],
    "max-line-length": [true, 160],
    "object-literal-sort-keys" : [false],
    "trailing-comma": [
      true,
      "never"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
